var slaying = true; 

var youHit = Math.floor( Math.random() * 2 );

var damegeThisRound = Math.floor( Math.random() * 5 + 1 );

var totalDamage = 0;

while (slaying) {
    
    if ( youHit ) {
        
        console.log('Vc derrotou o DragÃ£o');
        
        totalDamage += damegeThisRound;
        
        if ( totalDamage >= 4 ) {
            
            console.log( 'You win!' );
            
            slaying = false;
            
        } else {
            
            youHit = Math.floor( Math.random() * 2 );
            
        }
        
    } else {
        
        console.log('Vc foi derrotado');
        
        slaying = false;
        
    }
    
    
    
}
